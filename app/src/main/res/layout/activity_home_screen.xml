<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.SoftwareOverflow.CookingScheduler.HomeScreen">

    <ImageView
        android:id="@+id/homeScreenImageView"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:src="@drawable/launcher"/>

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="createMeal"
            android:text="@string/home_screen_new"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/loadPreviousMeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="createMeal"
            android:text="@string/home_screen_load"
            android:layout_margin="10dp"/>
    </LinearLayout>

</RelativeLayout>
